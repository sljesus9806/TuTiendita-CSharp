<Window x:Class="TuTiendita.DialogoEntrada"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputDialog" Height="150" Width="398">
    <Grid>
        <Label x:Name="lblQuestion" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <TextBox x:Name="txtAnswer" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Width="360"/>
        <Button Content="Pagar" HorizontalAlignment="Left" Margin="220,90,0,0" VerticalAlignment="Top" Width="75" Click="BtnOK_Click"/>
        <Button Content="Cancelar" HorizontalAlignment="Left" Margin="310,90,0,0" VerticalAlignment="Top" Width="75" Click="BtnCancel_Click"/>
        <Label Content="Cliente paga con:" HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top" Width="170"/>
    </Grid>
</Window>
