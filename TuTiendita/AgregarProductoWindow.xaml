<Window x:Class="TuTiendita.AgregarProductoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Agregar Producto" Height="250" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Código:" Grid.Row="0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtCodigo" Grid.Row="0" Margin="100,0,0,10"/>

        <Label Content="Nombre:" Grid.Row="1" VerticalAlignment="Center"/>
        <TextBox x:Name="txtNombre" Grid.Row="1" Margin="100,0,0,10"/>

        <Label Content="Precio:" Grid.Row="2" VerticalAlignment="Center"/>
        <TextBox x:Name="txtPrecio" Grid.Row="2" Margin="100,0,0,10"/>

        <Label Content="Stock:" Grid.Row="3" VerticalAlignment="Center"/>
        <TextBox x:Name="txtStock" Grid.Row="3" Margin="100,0,0,10"/>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Guardar" Width="80" Margin="5" Click="BtnGuardar_Click"/>
            <Button Content="Cancelar" Width="80" Margin="5" Click="BtnCancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
